---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';

// You can also define any props here if needed
const { title } = Astro.props;

const lazydogsUrl = '/public/lazydogs.jpg';
---

<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link rel='icon' href='/favicon.svg' />
        <title>{title} | Furekunst</title>

        <!-- Sitemap -->
        <link rel='sitemap' href='/sitemap-index.xml' />

        <!-- SEO Meta Tags -->
        <meta
            name='description'
            content='Furekunst viser kunstner Elisabeth Fure Schwarz sine malerier. Her kan du se gjennom galleriet, og ta kontakt ved interesse for kjÃ¸p.'
        />
        <meta name='keywords' content='Kunst, Elisabeth, Fure, Schwarz, maleri, akvarell, akryl, galleri' />
        <meta name='author' content='Sindre Sauarlia' />

        <!-- Open Graph / Facebook -->
        <meta property='og:type' content='Furekunst' />
        <meta property='og:url' content='https://furekunst.no' />
        <meta property='og:title' content={title} />
        <meta property='og:description' content='Galleri for Elisabeth Fure Schwarz | Furekunst' />
        <meta property='og:image' content='/lazydogs.jpg' />

        <!-- Canonical link (dynamic) -->
        <link rel='canonical' href={`https://furekunst.no${Astro.url.pathname}`} />

        <!-- Language detection -->
        <meta http-equiv='content-language' content='nb-NO' />

        <ViewTransitions />
    </head>
    <body class='flex flex-col min-h-screen bg-pastel font-body text-primary'>
        <Header />

        <main id='innhold' class='flex-grow container mx-auto mt-8 px-3 md:px-1.5 lg:px-0' transition:animate='fade'>
            <slot />
        </main>

        <Footer />
    </body>
</html>

<style is:global>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    h1 {
        @apply text-2xl md:text-3xl font-didot text-gray-600;
    }

    h2 {
        @apply text-xl md:text-2xl font-didot text-gray-500;
    }
</style>
